<prg:program xmlns:prg="http://xsd.nore.fr/program" version="2.0">
	<prg:name>sampleapp</prg:name>
	<prg:author>Renaud Guillard</prg:author>
	<prg:version>1.0</prg:version>
	<prg:copyright>Copyright © 2012 by Renaud GUillard (dev@niao.fr)</prg:copyright>
	<prg:license>Distributed under the terms of the BSD License, see LICENSE</prg:license>
	<prg:documentation>
		<prg:abstract>Sample application
	</prg:abstract>
		<prg:details>This application demonstrates most of the possibilities offered by the program interface definition schema to define and display command line options</prg:details>
	</prg:documentation>
	<prg:ui>
		<prg:label>Sample application</prg:label>
		<prg:window width="512" height="960"/>
	</prg:ui>
	<prg:options>
		<prg:switch>
			<prg:databinding>
				<prg:variable>
					displayHelp
				</prg:variable>
			</prg:databinding>
			<prg:documentation>
				<prg:abstract>Display the help message</prg:abstract>
			</prg:documentation>
			<prg:names>
				<prg:long>help</prg:long>
			</prg:names>
			<prg:ui mode="disabled"/>
		</prg:switch>
		<prg:switch>
			<prg:databinding>
				<prg:variable>
					verboseProgram
				</prg:variable>
			</prg:databinding>
			<prg:names>
				<prg:long>verbose</prg:long>
				<prg:long>bleeeeh</prg:long>
				<prg:short>v</prg:short>
			</prg:names>
			<prg:ui mode="disabled"/>
			<prg:documentation>
				<prg:abstract>More text!</prg:abstract>
			</prg:documentation>
		</prg:switch>
		<prg:argument>
			<prg:databinding>
				<prg:variable>uiArg</prg:variable>
			</prg:databinding>
			<prg:documentation>
				<prg:abstract>A single argument option automatically set in the UI</prg:abstract>
			</prg:documentation>
			<prg:names>
				<prg:long>ui-only</prg:long>
			</prg:names>
			<prg:ui mode="hidden">
				<prg:value>ui argument</prg:value>
			</prg:ui>
		</prg:argument>
		<prg:argument>
			<prg:databinding>
				<prg:variable>standardArg</prg:variable>
			</prg:databinding>
			<prg:documentation>
				<prg:abstract>Basic argument option</prg:abstract>
				<prg:details>This option will accept any kind of argument</prg:details>
			</prg:documentation>
			<prg:names>
				<prg:long>standard-arg</prg:long>
			</prg:names>
			<prg:ui mode="default"/>
		</prg:argument>
		<prg:switch>
			<prg:databinding>
				<prg:variable>switch</prg:variable>
			</prg:databinding>
			<prg:documentation>
				<prg:abstract>Simple switch</prg:abstract>
				<prg:details>A simple switch option (true/false)</prg:details>
			</prg:documentation>
			<prg:names>
				<prg:short>s</prg:short>
				<prg:long>simpleswitch</prg:long>
			</prg:names>
		</prg:switch>
		<prg:group>
			<prg:ui>
				<prg:label>A group with only one element</prg:label>
			</prg:ui>
			<prg:documentation>
				<prg:abstract>A useless group option</prg:abstract>
				<prg:details>Single-options groups will be flattened in UI</prg:details>
			</prg:documentation>
			<prg:options>
				<prg:switch>
					<prg:databinding>
						<prg:variable>grpSwitch</prg:variable>
					</prg:databinding>
					<prg:documentation>
						<prg:abstract>Another switch</prg:abstract>
						<prg:details>This swith is in a group with only one option. 
							So, the group is hidden and the option appears at the same level
						</prg:details>
					</prg:documentation>
					<prg:names>
						<prg:long>switch-alone-in-group</prg:long>
					</prg:names>
				</prg:switch>
			</prg:options>
		</prg:group>
		<prg:group type="exclusive">
			<prg:documentation>
				<prg:abstract>Exclusive option group</prg:abstract>
				<prg:details>This group can be defined in gengetopt (top level, exclusive, switch-less)</prg:details>
			</prg:documentation>
			<prg:options>
				<prg:argument>
					<prg:databinding>
						<prg:variable>tlxg1</prg:variable>
					</prg:databinding>
					<prg:documentation>
						<prg:abstract>ArgGA</prg:abstract>
					</prg:documentation>
					<prg:names>
						<prg:long>tlxg1</prg:long>
					</prg:names>
				</prg:argument>
				<prg:argument>
					<prg:databinding>
						<prg:variable>tlxg2</prg:variable>
					</prg:databinding>
					<prg:documentation>
						<prg:abstract>ArgG2</prg:abstract>
					</prg:documentation>
					<prg:names>
						<prg:long>tlxg2</prg:long>
					</prg:names>
				</prg:argument>
			</prg:options>
		</prg:group>
		<prg:group type="exclusive">
			<prg:documentation>
				<prg:abstract>Exclusive option group</prg:abstract>
			</prg:documentation>
			<prg:databinding>
				<prg:variable>globalArgumentsGroup</prg:variable>
			</prg:databinding>
			<prg:options>
				<prg:group>
					<prg:databinding>
						<prg:variable>nestedGroup</prg:variable>
					</prg:databinding>
					<prg:documentation>
						<prg:abstract>Nested group (basic type arguments)</prg:abstract>
					</prg:documentation>
					<prg:options>
						<prg:argument>
							<prg:databinding>
								<prg:variable>garg</prg:variable>
							</prg:databinding>
							<prg:documentation>
								<prg:abstract>Basic argument</prg:abstract>
							</prg:documentation>
							<prg:names>
								<prg:long>basic-argument</prg:long>
							</prg:names>
						</prg:argument>
						<prg:argument id="gsarg_id">
							<prg:databinding>
								<prg:variable>gsarg</prg:variable>
							</prg:databinding>
							<prg:documentation>
								<prg:abstract>String argument</prg:abstract>
								<prg:details>This argument expect a string, which is 
roughly the same thing as accepting any kind of content</prg:details>
							</prg:documentation>
							<prg:names>
								<prg:long>string-argument</prg:long>
							</prg:names>
							<prg:type>
								<prg:string/>
							</prg:type>
						</prg:argument>
					</prg:options>
				</prg:group>
				<prg:argument id="dgarg_id">
					<prg:databinding>
						<prg:variable>dgarg</prg:variable>
					</prg:databinding>
					<prg:documentation>
						<prg:abstract>Argument (with default value)</prg:abstract>
						<prg:details>A default value is proposed. If the user does not change it, the option will not appear in the command line</prg:details>
					</prg:documentation>
					<prg:names>
						<prg:long>argument-with-default</prg:long>
					</prg:names>
					<prg:default>Default value</prg:default>
				</prg:argument>
				<prg:group type="exclusive">
					<prg:databinding>
						<prg:variable>nestedExclusiveGroup</prg:variable>
					</prg:databinding>
					<prg:documentation>
						<prg:abstract>Nested exclusive group</prg:abstract>
					</prg:documentation>
					<prg:options>
						<prg:argument>
							<prg:databinding>
								<prg:variable>gnarg</prg:variable>
							</prg:databinding>
							<prg:documentation>
								<prg:abstract>Numeric argument</prg:abstract>
								<prg:details>Only numberrs are accepted as argument value.
A numeric argument appears as a spin box in the UI</prg:details>
							</prg:documentation>
							<prg:names>
								<prg:long>numeric-argument</prg:long>
							</prg:names>
							<prg:type>
								<prg:number/>
							</prg:type>
						</prg:argument>
						<prg:argument required="true">
							<prg:databinding>
								<prg:variable>gn2arg</prg:variable>
							</prg:databinding>
							<prg:documentation>
								<prg:abstract>Float argument</prg:abstract>
								<prg:details>Numeric argument with decimals. 
A minimum (1.0) and maximum (10) values are also defined</prg:details>
							</prg:documentation>
							<prg:names>
								<prg:long>float-argument</prg:long>
							</prg:names>
							<prg:type>
								<prg:number min="1.0" max="10.0" decimal="2"/>
							</prg:type>
						</prg:argument>
					</prg:options>
				</prg:group>
			</prg:options>
			<prg:default id="dgarg_id"/>
		</prg:group>
		<prg:argument id="gfarg_id">
			<prg:databinding>
				<prg:variable>gfarg</prg:variable>
			</prg:databinding>
			<prg:documentation>
				<prg:abstract>File argument</prg:abstract>
				<prg:details>An existing file argument</prg:details>
			</prg:documentation>
			<prg:names>
				<prg:long>existing-file-argument</prg:long>
			</prg:names>
			<prg:type>
				<prg:path exist="true"/>
			</prg:type>
		</prg:argument>
		<prg:argument>
			<prg:databinding>
				<prg:variable>gFarg</prg:variable>
			</prg:databinding>
			<prg:documentation>
				<prg:abstract>Folder argument</prg:abstract>
				<prg:details>Expect a folder with Read/Write access</prg:details>
			</prg:documentation>
			<prg:names>
				<prg:long>rw-folder-argument</prg:long>
			</prg:names>
			<prg:type>
				<prg:path access="rw" exist="true">
					<prg:kinds>
						<prg:folder/>
					</prg:kinds>
				</prg:path>
			</prg:type>
		</prg:argument>
		<prg:argument>
			<prg:databinding>
				<prg:variable>gmfarg</prg:variable>
			</prg:databinding>
			<prg:documentation>
				<prg:abstract>File, folder etc.</prg:abstract>
				<prg:details>Accept most of file system object types. 
On some UI and platforms, you can't select a folder in the file box if 
files are also accepted.</prg:details>
			</prg:documentation>
			<prg:names>
				<prg:long>mixed-fskind-argument</prg:long>
			</prg:names>
			<prg:type>
				<prg:path access="rw">
					<prg:kinds>
						<prg:file/>
						<prg:socket/>
						<prg:folder/>
						<prg:symlink/>
					</prg:kinds>
				</prg:path>
			</prg:type>
		</prg:argument>
		<prg:group>
			<prg:documentation>
				<prg:abstract>Multi argument options</prg:abstract>
				<prg:details>A non-exclusive group of options which accept one or more arguments</prg:details>
			</prg:documentation>
			<prg:options>
				<prg:multiargument max="3" min="2">
					<prg:databinding>
						<prg:variable>gma</prg:variable>
					</prg:databinding>
					<prg:documentation>
						<prg:abstract>Multi argument</prg:abstract>
						<prg:details>A basic multi argument options</prg:details>
					</prg:documentation>
					<prg:names>
						<prg:long>multi-argument</prg:long>
					</prg:names>
				</prg:multiargument>
				<prg:multiargument>
					<prg:databinding>
						<prg:variable>gmsa</prg:variable>
					</prg:databinding>
					<prg:documentation>
						<prg:abstract>Multi select argument</prg:abstract>
						<prg:details>Accept only a fixed set of values</prg:details>
					</prg:documentation>
					<prg:names>
						<prg:long>multi-select-argument</prg:long>
					</prg:names>
					<prg:select restrict="true">
						<prg:option>FirstOption		</prg:option>
						<prg:option>Second option</prg:option>
						<prg:option>Third option</prg:option>
					</prg:select>
				</prg:multiargument>
				<prg:multiargument>
					<prg:databinding>
						<prg:variable>gmaxml</prg:variable>
					</prg:databinding>
					<prg:documentation>
						<prg:abstract>Xml files</prg:abstract>
						<prg:details>Expect a file. XML files are welcome but others are accepted</prg:details>
					</prg:documentation>
					<prg:names>
						<prg:long>multi-xml</prg:long>
					</prg:names>
					<prg:type>
						<prg:path>
							<prg:patterns>
								<prg:pattern>
									<prg:name>Xml files</prg:name>
									<prg:rules>
										<prg:rule>
											<prg:endWith>.xml</prg:endWith>
										</prg:rule>
										<prg:rule>
											<prg:endWith>.xsd</prg:endWith>
										</prg:rule>
										<prg:rule>
											<prg:endWith>.xsl</prg:endWith>
										</prg:rule>
										<prg:rule>
											<prg:endWith>.xul</prg:endWith>
										</prg:rule>
									</prg:rules>
								</prg:pattern>
							</prg:patterns>
						</prg:path>
					</prg:type>
				</prg:multiargument>
			</prg:options>
		</prg:group>
		<prg:argument>
			<prg:documentation>
				<prg:abstract>Hostname</prg:abstract>
				<prg:details>Accept a host name. In console mode, the autocompletion will 
propose hosts defined in /etc/hosts.</prg:details>
			</prg:documentation>
			<prg:names>
				<prg:long>hostname</prg:long>
				<prg:short>H</prg:short>
			</prg:names>
			<prg:type>
				<prg:hostname/>
			</prg:type>
		</prg:argument>
		<prg:argument>
			<prg:names>
				<prg:long>simple-pattern-sh</prg:long>
				<prg:short>P</prg:short>
			</prg:names>
			<prg:type>
				<prg:path access="x">
					<prg:patterns restrict="true">
						<prg:pattern>
							<prg:name>Shell files</prg:name>
							<prg:rules>
								<prg:rule>
									<prg:endWith>.sh</prg:endWith>
								</prg:rule>
								<prg:rule>
									<prg:endWith>.run</prg:endWith>
								</prg:rule>
								<prg:rule>
									<prg:endWith>.xsh</prg:endWith>
								</prg:rule>
							</prg:rules>
						</prg:pattern>
					</prg:patterns>
				</prg:path>
			</prg:type>
		</prg:argument>
		<prg:argument>
			<prg:databinding>
				<prg:variable>


strictEnum</prg:variable>
			</prg:databinding>
			<prg:documentation>
				<prg:abstract>Strict enumeration</prg:abstract>
			</prg:documentation>
			<prg:names>
				<prg:long>strict-enum</prg:long>
				<prg:short>E</prg:short>
			</prg:names>
			<prg:select restrict="true">
				<prg:option>Option A</prg:option>
				<prg:option>Value B</prg:option>
				<prg:option>Item C</prg:option>
				<prg:option>ItemD with space</prg:option>
			</prg:select>
			<prg:default>Value B</prg:default>
		</prg:argument>
		<prg:argument>
			<prg:databinding>
				<prg:variable>nonStrictEnum</prg:variable>
			</prg:databinding>
			<prg:documentation>
				<prg:abstract>Non-restrictive enumeration</prg:abstract>
				<prg:details>Non restricive enumeration will only propose 
some values in autocompletion but will accept any other values</prg:details>
			</prg:documentation>
			<prg:names>
				<prg:long>non-strict-enum</prg:long>
				<prg:short>e</prg:short>
			</prg:names>
			<prg:select>
				<prg:option>nOptionA</prg:option>
				<prg:option>nValueB</prg:option>
				<prg:option>nItemC</prg:option>
				<prg:option>nItemD with space</prg:option>
			</prg:select>
		</prg:argument>
	</prg:options>
	<prg:subcommands>
		<prg:subcommand>
			<prg:name>sub</prg:name>
			<prg:documentation>
				<prg:abstract>A sub-command (sub)</prg:abstract>
			</prg:documentation>
			<prg:options>
				<prg:switch>
					<prg:names>
						<prg:long>switch</prg:long>
						<prg:long>sc-switch</prg:long>
					</prg:names>
					<prg:databinding>
						<prg:variable>switch</prg:variable>
					</prg:databinding>
					<prg:documentation>
						<prg:abstract>Switch of the sub command</prg:abstract>
						<prg:details>The bound variable name can be the same as another subcommand variable 
or one of the global option. In this case, you have to set the 
prg.sh.parser.prefixSubcommandOptionVariable xslt parameter to 'yes'</prg:details>
					</prg:documentation>
				</prg:switch>
				<prg:argument>
					<prg:databinding>
						<prg:variable>subFile</prg:variable>
					</prg:databinding>
					<prg:documentation>
						<prg:abstract>Sub command file argument</prg:abstract>
					</prg:documentation>
					<prg:names>
						<prg:long>sc-existing-file-argument</prg:long>
					</prg:names>
					<prg:type>
						<prg:path exist="true"/>
					</prg:type>
				</prg:argument>
				<prg:argument>
					<prg:databinding>
						<prg:variable>subEnum</prg:variable>
					</prg:databinding>
					<prg:documentation>
						<prg:abstract>Sub command argument (strict set)</prg:abstract>
					</prg:documentation>
					<prg:names>
						<prg:long>sc-strict-enum</prg:long>
					</prg:names>
					<prg:select restrict="true">
						<prg:option>OptionA</prg:option>
						<prg:option>ValueB</prg:option>
						<prg:option>ItemC</prg:option>
					</prg:select>
				</prg:argument>
			</prg:options>
			<prg:values>
				<prg:other>
					<prg:type>
						<prg:path exist="true">
							<prg:kinds>
								<prg:folder/>
							</prg:kinds>
						</prg:path>
					</prg:type>
				</prg:other>
			</prg:values>
		</prg:subcommand>
		<prg:subcommand>
			<prg:ui mode="disabled">
				<prg:label>Help sub command</prg:label>
			</prg:ui>
			<prg:name>help</prg:name>
			<prg:aliases>
				<prg:alias>hep</prg:alias>
				<prg:alias>sos</prg:alias>
			</prg:aliases>
			<prg:documentation>
				<prg:abstract>Help about other sub commands</prg:abstract>
				<prg:details>This command is not available in UI</prg:details>
			</prg:documentation>
			<prg:values>
				<prg:value>
					<prg:documentation>
						<prg:abstract>Subcommand name</prg:abstract>
					</prg:documentation>
					<prg:select restrict="true">
						<prg:option>sub</prg:option>
						<prg:option>help</prg:option>
					</prg:select>
				</prg:value>
			</prg:values>
		</prg:subcommand>
		<prg:subcommand>
			<prg:name>version</prg:name>
		</prg:subcommand>
	</prg:subcommands>
	<prg:values>
		<prg:value>
			<prg:documentation>
				<prg:abstract>Mixed value</prg:abstract>
				<prg:details>This is the most basic element you can define. Not really useful</prg:details>
			</prg:documentation>
		</prg:value>
		<prg:value>
			<prg:type>
				<prg:path access="rw"/>
			</prg:type>
			<prg:documentation>
				<prg:abstract>File value</prg:abstract>
				<prg:details>Anonymous values will be added to the command line after all options</prg:details>
			</prg:documentation>
		</prg:value>
		<prg:value>
			<prg:documentation>
				<prg:abstract>Selection</prg:abstract>
				<prg:details>Like standard options, anonymous values may have a restricted or proposed list of argument values</prg:details>
			</prg:documentation>
			<prg:select>
				<prg:option>A</prg:option>
				<prg:option>B</prg:option>
			</prg:select>
		</prg:value>
		<prg:other>
			<prg:documentation>
				<prg:abstract>Other</prg:abstract>
				<prg:details>Other values after the prevous ones.
Act an anonymous multi-arguement option</prg:details>
			</prg:documentation>
		</prg:other>
	</prg:values>
</prg:program>
