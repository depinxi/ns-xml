<prg:program version="2.0" xmlns:prg="http://xsd.nore.fr/program">
	<prg:name>sampleapp</prg:name>
	<prg:author>Renaud Guillard</prg:author>
	<prg:version>1.0</prg:version>
	<prg:documentation>
		<prg:abstract>
		
		Sample application with all kind of options
		
		
		</prg:abstract>
	</prg:documentation>
	<prg:ui>
		<prg:label>
		Sample application
</prg:label>
	</prg:ui>
	<prg:options>
		<prg:switch>
			<prg:databinding>
				<prg:variable>
				displayHelp   </prg:variable>
			</prg:databinding>
			<prg:names>
				<prg:long>help</prg:long>
			</prg:names>
			<prg:ui mode="disabled" />
		</prg:switch>
		<prg:argument>
			<prg:databinding>
				<prg:variable>uiArg</prg:variable>
			</prg:databinding>
			<prg:names>
				<prg:long>ui-only</prg:long>
			</prg:names>
			<prg:ui mode="hidden">
				<prg:value>ui argument</prg:value>
			</prg:ui>
		</prg:argument>
		<prg:argument>
			<prg:databinding>
				<prg:variable>standardArg</prg:variable>
			</prg:databinding>
			<prg:names>
				<prg:long>standard-arg</prg:long>
			</prg:names>
			<prg:ui mode="default" />
		</prg:argument>
		<prg:switch>
			<prg:databinding>
				<prg:variable>gswitch</prg:variable>
			</prg:databinding>
			<prg:documentation>
				<prg:abstract>Simple switch</prg:abstract>
			</prg:documentation>
			<prg:names>
				<prg:short>s</prg:short>
				<prg:long>simpleswitch</prg:long>
			</prg:names>
		</prg:switch>

		<prg:group>
			<prg:ui>
				<prg:label>A group with only one element</prg:label>
			</prg:ui>
			<prg:options>
				<prg:switch>
					<prg:databinding>
						<prg:variable>grpSwitch</prg:variable>
					</prg:databinding>
					<prg:names>
						<prg:long>switch-alone-in-group</prg:long>
					</prg:names>
				</prg:switch>
			</prg:options>
		</prg:group>

		<prg:group type="exclusive">
			<prg:documentation>
				<prg:abstract>Arguments group</prg:abstract>
			</prg:documentation>
			<prg:databinding>
				<prg:variable>globalArgumentsGroup</prg:variable>
			</prg:databinding>
			<prg:options>
				<prg:argument>
					<prg:databinding>
						<prg:variable>garg</prg:variable>
					</prg:databinding>
					<prg:documentation>
						<prg:abstract>Basic argument</prg:abstract>
					</prg:documentation>
					<prg:names>
						<prg:long>basic-argument</prg:long>
					</prg:names>
				</prg:argument>

				<prg:argument>
					<prg:databinding>
						<prg:variable>gsarg</prg:variable>
					</prg:databinding>
					<prg:documentation>
						<prg:abstract>String argument</prg:abstract>
					</prg:documentation>
					<prg:names>
						<prg:long>string-argument</prg:long>
					</prg:names>
					<prg:type>
						<prg:string />
					</prg:type>
				</prg:argument>

				<prg:argument>
					<prg:databinding>
						<prg:variable>dgarg</prg:variable>
					</prg:databinding>
					<prg:documentation>
						<prg:abstract>Argument (with default value)</prg:abstract>
					</prg:documentation>
					<prg:names>
						<prg:long>argument-with-default</prg:long>
					</prg:names>
					<prg:default>Default value</prg:default>
				</prg:argument>

				<prg:argument>
					<prg:databinding>
						<prg:variable>gnarg</prg:variable>
					</prg:databinding>
					<prg:documentation>
						<prg:abstract>Numeric argument</prg:abstract>
					</prg:documentation>
					<prg:names>
						<prg:long>numeric-argument</prg:long>
					</prg:names>
					<prg:type>
						<prg:number />
					</prg:type>
				</prg:argument>

				<prg:argument>
					<prg:databinding>
						<prg:variable>gn2arg</prg:variable>
					</prg:databinding>
					<prg:documentation>
						<prg:abstract>Float argument</prg:abstract>
					</prg:documentation>
					<prg:names>
						<prg:long>float-argument</prg:long>
					</prg:names>
					<prg:type>
						<prg:number min="1.0" max="10.0" decimal="2" />
					</prg:type>
				</prg:argument>
			</prg:options>
		</prg:group>

		<prg:argument>
			<prg:databinding>
				<prg:variable>gfarg</prg:variable>
			</prg:databinding>
			<prg:documentation>
				<prg:abstract>File argument</prg:abstract>
			</prg:documentation>
			<prg:names>
				<prg:long>existing-file-argument</prg:long>
			</prg:names>
			<prg:type>
				<prg:path exist="true" />
			</prg:type>
		</prg:argument>

		<prg:argument>
			<prg:databinding>
				<prg:variable>gFarg</prg:variable>
			</prg:databinding>
			<prg:documentation>
				<prg:abstract>Folder argument</prg:abstract>
			</prg:documentation>
			<prg:names>
				<prg:long>rw-folder-argument</prg:long>
			</prg:names>
			<prg:type>
				<prg:path access="rw">
					<prg:kinds>
						<prg:folder />
					</prg:kinds>
				</prg:path>
			</prg:type>
		</prg:argument>

		<prg:argument>
			<prg:databinding>
				<prg:variable>gmfarg</prg:variable>
			</prg:databinding>
			<prg:documentation>
				<prg:abstract>Mixed selection of kinds</prg:abstract>
			</prg:documentation>
			<prg:names>
				<prg:long>mixed-fskind-argument</prg:long>
			</prg:names>
			<prg:type>
				<prg:path access="rw">
					<prg:kinds>
						<prg:file />
						<prg:socket />
						<prg:folder />
						<prg:symlink />
					</prg:kinds>
				</prg:path>
			</prg:type>
		</prg:argument>

		<prg:group>
			<prg:documentation>
				<prg:abstract>Multi argument options</prg:abstract>
			</prg:documentation>
			<prg:options>
				<prg:multiargument>
					<prg:databinding>
						<prg:variable>gma</prg:variable>
					</prg:databinding>
					<prg:documentation>
						<prg:abstract>Multi argument</prg:abstract>
					</prg:documentation>
					<prg:names>
						<prg:long>multi-argument</prg:long>
					</prg:names>
				</prg:multiargument>

				<prg:multiargument>
					<prg:databinding>
						<prg:variable>gmsa</prg:variable>
					</prg:databinding>
					<prg:documentation>
						<prg:abstract>Multi select argument</prg:abstract>
					</prg:documentation>
					<prg:names>
						<prg:long>multi-select-argument</prg:long>
					</prg:names>
					<prg:select restrict="true">
						<prg:option>FirstOption    </prg:option>
						<prg:option>Second option</prg:option>
					</prg:select>
				</prg:multiargument>

				<prg:multiargument>
					<prg:databinding>
						<prg:variable>gmaxml</prg:variable>
					</prg:databinding>
					<prg:documentation>
						<prg:abstract>Xml files</prg:abstract>
					</prg:documentation>
					<prg:names>
						<prg:long>multi-xml</prg:long>
					</prg:names>
					<prg:type>
						<prg:path>
							<prg:patterns>
								<prg:pattern>
									<prg:name>Xml files</prg:name>
									<prg:rules>
										<prg:rule>
											<prg:endWith>.xml</prg:endWith>
										</prg:rule>
										<prg:rule>
											<prg:endWith>.xsd</prg:endWith>
										</prg:rule>
										<prg:rule>
											<prg:endWith>.xsl</prg:endWith>
										</prg:rule>
										<prg:rule>
											<prg:endWith>.xul</prg:endWith>
										</prg:rule>
									</prg:rules>
								</prg:pattern>
							</prg:patterns>
						</prg:path>
					</prg:type>
				</prg:multiargument>
			</prg:options>
		</prg:group>

		<prg:argument>
			<prg:names>
				<prg:long>hostname</prg:long>
				<prg:short>H</prg:short>
			</prg:names>
			<prg:type>
				<prg:hostname />
			</prg:type>
		</prg:argument>

		<prg:argument>
			<prg:names>
				<prg:long>simple-pattern-sh</prg:long>
				<prg:short>P</prg:short>
			</prg:names>
			<prg:type>
				<prg:path access="x">
					<prg:patterns restrict="true">
						<prg:pattern>
							<prg:name>Shell files</prg:name>
							<prg:rules>
								<prg:rule>
									<prg:endWith>.sh</prg:endWith>
								</prg:rule>
								<prg:rule>
									<prg:endWith>.run</prg:endWith>
								</prg:rule>
								<prg:rule>
									<prg:endWith>.xsh</prg:endWith>
								</prg:rule>
							</prg:rules>
						</prg:pattern>
					</prg:patterns>
				</prg:path>
			</prg:type>
		</prg:argument>

		<prg:argument>
			<prg:databinding>
				<prg:variable>
				
				
				strictEnum</prg:variable>
			</prg:databinding>
			<prg:names>
				<prg:long>strict-enum</prg:long>
				<prg:short>E</prg:short>
			</prg:names>
			<prg:select restrict="true">
				<prg:option>Option A</prg:option>
				<prg:option>Value B</prg:option>
				<prg:option>Item C</prg:option>
				<prg:option>ItemD with space</prg:option>
			</prg:select>
			<prg:default>Value B</prg:default>
		</prg:argument>

		<prg:argument>
			<prg:databinding>
				<prg:variable>nonStrictEnum</prg:variable>
			</prg:databinding>
			<prg:names>
				<prg:long>non-strict-enum</prg:long>
				<prg:short>e</prg:short>
			</prg:names>
			<prg:select>
				<prg:option>nOptionA</prg:option>
				<prg:option>nValueB</prg:option>
				<prg:option>nItemC</prg:option>
				<prg:option>nItemD with space</prg:option>
			</prg:select>
		</prg:argument>
	</prg:options>

	<prg:subcommands>
		<prg:subcommand>
			<prg:name>sub</prg:name>
			<prg:options>
				<prg:switch>
					<prg:names>
						<prg:long>switch</prg:long>
						<prg:long>sc-switch</prg:long>
					</prg:names>
				</prg:switch>
				<prg:argument>
					<prg:databinding>
						<prg:variable>subFile</prg:variable>
					</prg:databinding>
					<prg:names>
						<prg:long>sc-existing-file-argument</prg:long>
					</prg:names>
					<prg:type>
						<prg:path exist="true" />
					</prg:type>
				</prg:argument>
				<prg:argument>
					<prg:databinding>
						<prg:variable>subEnum</prg:variable>
					</prg:databinding>
					<prg:names>
						<prg:long>sc-strict-enum</prg:long>
					</prg:names>
					<prg:select restrict="true">
						<prg:option>OptionA</prg:option>
						<prg:option>ValueB</prg:option>
						<prg:option>ItemC</prg:option>
					</prg:select>
				</prg:argument>
			</prg:options>
			<prg:values>
				<prg:other>
					<prg:type>
						<prg:path />
					</prg:type>
				</prg:other>
			</prg:values>
		</prg:subcommand>
		<prg:subcommand>
			<prg:name>help</prg:name>
			<prg:documentation>
				<prg:abstract>Help about other sub commands</prg:abstract>
			</prg:documentation>
			<prg:values>
				<prg:value>
					<prg:documentation>
						<prg:abstract>Subcommand name</prg:abstract>
					</prg:documentation>
					<prg:select restrict="true">
						<prg:option>sub</prg:option>
						<prg:option>help</prg:option>
					</prg:select>
				</prg:value>
			</prg:values>
		</prg:subcommand>
	</prg:subcommands>

	<prg:values>
		<prg:value>
			<prg:type>
				<prg:path access="rw" />
			</prg:type>
			<prg:documentation>
				<prg:abstract>File value</prg:abstract>
			</prg:documentation>
		</prg:value>

		<prg:value>
			<prg:documentation>
				<prg:abstract>Mixed value</prg:abstract>
			</prg:documentation>
		</prg:value>

		<prg:value>
			<prg:documentation>
				<prg:abstract>Selection</prg:abstract>
			</prg:documentation>
			<prg:select>
				<prg:option>A</prg:option>
				<prg:option>B</prg:option>
			</prg:select>
		</prg:value>

		<prg:other>
			<prg:documentation>
				<prg:abstract>Other</prg:abstract>
			</prg:documentation>
		</prg:other>
	</prg:values>
</prg:program>
