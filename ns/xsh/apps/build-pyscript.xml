<prg:program xmlns:prg="http://xsd.nore.fr/program" xmlns:xi="http://www.w3.org/2001/XInclude" version="2.0">
	<prg:name>build-pyscript</prg:name>
	<prg:author>Renaud Guillard</prg:author>
	<prg:version>1.0</prg:version>
	<prg:copyright>Copyright © 2011-2012 by Renaud Guillard (dev@nore.fr)</prg:copyright>
	<prg:license>Distributed under the terms of the BSD License, see LICENSE</prg:license>
	<prg:documentation>
		<prg:abstract>Python script builder which use program interface XML definition file to automatically generate command line processing and help messages</prg:abstract>
	</prg:documentation>
	<prg:ui>
		<prg:label>Python script builder</prg:label>
	</prg:ui>
	<prg:options>
		<prg:argument required="true" id="pythonScriptPath">
			<prg:databinding>
				<prg:variable>pythonScriptPath</prg:variable>
			</prg:databinding>
			<prg:documentation>
				<prg:abstract>Python script path</prg:abstract>
				<prg:details>Location of the Python script body. The parser module will be created
					at the same place
				</prg:details>
			</prg:documentation>
			<prg:names>
				<prg:short>p</prg:short>
				<prg:long>python</prg:long>
			</prg:names>
			<prg:type>
				<prg:path exist="true">
					<prg:kinds>
						<prg:file/>
					</prg:kinds>
					<prg:patterns>
						<prg:pattern>
							<prg:name>Python script</prg:name>
							<prg:rules>
								<prg:rule>
									<prg:endWith>.py</prg:endWith>
								</prg:rule>
							</prg:rules>
						</prg:pattern>
					</prg:patterns>
				</prg:path>
			</prg:type>
		</prg:argument>
		<prg:argument id="moduleName">
			<prg:databinding>
				<prg:variable>moduleName</prg:variable>
			</prg:databinding>
			<prg:default>Program</prg:default>
			<prg:documentation>
				<prg:abstract>Python module name</prg:abstract>
				<prg:details>Set the name of the command line parser python module</prg:details>
			</prg:documentation>
			<prg:names>
				<prg:short>m</prg:short>
				<prg:long>module-name</prg:long>
				<prg:long>module</prg:long>
			</prg:names>
		</prg:argument>
		<prg:switch>
			<prg:databinding>
				<prg:variable>update</prg:variable>
			</prg:databinding>
			<prg:documentation>
				<prg:abstract>Update pythom module if already exists</prg:abstract>
			</prg:documentation>
			<prg:names>
				<prg:short>u</prg:short>
				<prg:long>update</prg:long>
			</prg:names>
		</prg:switch>
		<!-- program interface XML definition file -->
		<xi:include href="options.xml" xpointer="xmlns(prg=http://xsd.nore.fr/program) xpointer(//prg:argument[@id = 'nsxml.option.requiredXmlProgramDescriptionPath'])"/>
		<!-- Skip validation -->
		<xi:include href="options.xml" xpointer="xmlns(prg=http://xsd.nore.fr/program) xpointer(//prg:switch[@id = 'nsxml.option.skipValidation'])"/>
		<!-- debugMode -->
		<xi:include href="options.xml" xpointer="xmlns(prg=http://xsd.nore.fr/program) xpointer(//prg:switch[@id = 'nsxml.option.debugMode'])"/>
		<!-- Help -->
		<xi:include href="../lib/options/options.xml" xpointer="xmlns(prg=http://xsd.nore.fr/program) xpointer(//prg:switch[@id = 'prg.option.displayHelp'])"/>
		<!-- ns-xml path -->
		<xi:include href="options.xml" xpointer="xmlns(prg=http://xsd.nore.fr/program) xpointer(//prg:group[@id = 'nsxml.option.nsxmlPathGroup'])"/>
	</prg:options>
</prg:program>
