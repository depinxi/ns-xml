<prg:program xmlns:prg="http://xsd.nore.fr/program" xmlns:xi="http://www.w3.org/2001/XInclude" version="2.0">
	<prg:name>new-xsh</prg:name>
	<prg:author>Renaud Guillard</prg:author>
	<prg:version>2.0.2</prg:version>
	<prg:copyright>Copyright © 2018 - 2021 by Renaud Guillard (dev@nore.fr)</prg:copyright>
	<prg:license>Distributed under the terms of the MIT License, see LICENSE</prg:license>
	<prg:documentation>
		<prg:abstract>A script to create XSH (XML + SH) files</prg:abstract>
		<prg:details>This program create the basic files needed by build-shellscript.sh to build a
			shell script with autogenerated
			usage and argument parsing
		</prg:details>
	</prg:documentation>
	<prg:ui>
		<prg:label>XML Shellscript generator</prg:label>
		<prg:window width="640" height="256" />
	</prg:ui>
	<prg:options>
		<prg:argument required="true">
			<prg:databinding>
				<prg:variable>xshName</prg:variable>
			</prg:databinding>
			<prg:documentation>
				<prg:abstract>XSH program name</prg:abstract>
			</prg:documentation>
			<prg:names>
				<prg:long>name</prg:long>
				<prg:short>n</prg:short>
			</prg:names>
			<prg:type>
				<!-- When available, add restrictions to name ? -->
				<prg:string />
			</prg:type>
		</prg:argument>
		<prg:argument>
			<prg:databinding>
				<prg:variable>outputPath</prg:variable>
			</prg:databinding>
			<prg:default>.</prg:default>
			<prg:documentation>
				<prg:abstract>Output path</prg:abstract>
			</prg:documentation>
			<prg:names>
				<prg:long>output</prg:long>
				<prg:long>path</prg:long>
				<prg:short>o</prg:short>
			</prg:names>
			<prg:type>
				<prg:path exist="true" access="rw">
					<prg:kinds>
						<prg:folder />
					</prg:kinds>
				</prg:path>
			</prg:type>
		</prg:argument>

		<prg:group>
			<prg:databinding>
				<prg:variable>programContent</prg:variable>
			</prg:databinding>
			<prg:documentation>
				<prg:abstract>Program content</prg:abstract>
			</prg:documentation>
			<prg:options>
				<prg:switch>
					<prg:databinding>
						<prg:variable>programContentEmbed</prg:variable>
					</prg:databinding>
					<prg:documentation>
						<prg:abstract>Embed pre-defined content</prg:abstract>
					</prg:documentation>
					<prg:names>
						<prg:long>embed</prg:long>
						<prg:short>e</prg:short>
					</prg:names>
				</prg:switch>
				<prg:multiargument>
					<prg:databinding>
						<prg:variable>programContentOptions</prg:variable>
					</prg:databinding>
					<prg:documentation>
						<prg:abstract>Predefined options</prg:abstract>
					</prg:documentation>
					<prg:names>
						<prg:long>options</prg:long>
						<prg:short>O</prg:short>
					</prg:names>
					<prg:select restrict="true">
						<prg:option>help</prg:option>
						<prg:option>version</prg:option>
					</prg:select>
				</prg:multiargument>
				<prg:multiargument>
					<prg:databinding>
						<prg:variable>programContentFunctions</prg:variable>
					</prg:databinding>
					<prg:documentation>
						<prg:abstract>Predefined function libraries</prg:abstract>
						<prg:details>
							Short path of XSH library resources
							<prg:endl />
							Exemple: text/sed to include ns/xsh/lib/text/sed.xsh file
						</prg:details>
					</prg:documentation>
					<prg:names>
						<prg:long>functions</prg:long>
						<prg:short>F</prg:short>
					</prg:names>
				</prg:multiargument>
			</prg:options>

		</prg:group>

		<!-- Help -->
		<xi:include href="../lib/options/options.xml" xpointer="xmlns(prg=http://xsd.nore.fr/program) xpointer(//prg:switch[@id = 'prg.option.displayHelp'])" />
		<!-- Version -->
		<xi:include href="../lib/options/options.xml" xpointer="xmlns(prg=http://xsd.nore.fr/program) xpointer(//prg:switch[@id = 'prg.option.displayVersion'])" />
		<!-- ns-xml path -->
		<xi:include href="options.xml" xpointer="xmlns(prg=http://xsd.nore.fr/program) xpointer(//prg:argument[@id = 'nsxml.option.nsxmlPath'])" />
	</prg:options>
</prg:program>
