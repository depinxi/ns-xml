<prg:program version="2.0" xmlns:prg="http://xsd.nore.fr/program" xmlns:xi="http://www.w3.org/2001/XInclude">
	<prg:name>switch-sarg</prg:name>
	<prg:author>Renaud Guillard</prg:author>
	<prg:version>1.0</prg:version>
	<prg:documentation>
		<prg:abstract>Test application</prg:abstract>
		<prg:details>Test switch and argument options basic features</prg:details>
	</prg:documentation>
	<prg:options>
		<prg:switch id="prg.unittest.option.switchA">
			<prg:databinding>
				<prg:variable>switchA</prg:variable>
			</prg:databinding>
			<prg:documentation>
				<prg:abstract>A simple switch</prg:abstract>
				<prg:details>The ui node will make this switch invisible in GUI</prg:details>
			</prg:documentation>
			<prg:names>
				<prg:short>a</prg:short>
				<prg:long>switch-a</prg:long>
			</prg:names>
			<prg:ui mode="disabled" />
		</prg:switch>
		<!-- Simple argument -->
		<prg:argument id="prg.unittest.option.argumentB">
			<prg:databinding>
				<prg:variable>argumentB</prg:variable>
			</prg:databinding>
			<prg:documentation>
				<prg:abstract>A basic single-argument option</prg:abstract>
				<prg:details>Argument value has no particular restrictions</prg:details>
			</prg:documentation>
			<prg:names>
				<prg:long>argument-b</prg:long>
				<prg:short>b</prg:short>
			</prg:names>
		</prg:argument>
	</prg:options>
	<prg:values>
		<prg:other />
	</prg:values>
</prg:program>
