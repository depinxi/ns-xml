<prg:program version="2.0" xmlns:prg="http://xsd.nore.fr/program" xmlns:xi="http://www.w3.org/2001/XInclude">
	<prg:name>app3</prg:name>
	<prg:author>Renaud Guillard</prg:author>
	<prg:version>1.0</prg:version>
	<prg:documentation>
		<prg:abstract>Test application (simple subcommand behavior)</prg:abstract>
	</prg:documentation>
	<prg:options>
		<!-- switch-a -->
		<xi:include href="../../app1/xml/program.xml" xpointer="xmlns(prg=http://xsd.nore.fr/program)xpointer(//prg:switch[@id = 'prg.unittest.option.switchA'])" />
		<!-- argument-b -->
		<xi:include href="../../app1/xml/program.xml" xpointer="xmlns(prg=http://xsd.nore.fr/program)xpointer(//prg:argument[@id = 'prg.unittest.option.argumentB'])" />
	</prg:options>
	<prg:subcommands>
		<prg:subcommand>
			<prg:name>sub</prg:name>
			<prg:aliases>
				<prg:alias>sc</prg:alias>
				<prg:alias>subcommand-alias</prg:alias>
			</prg:aliases>
			<prg:options>

				<prg:argument id="prg.unittest.option.argumentD">
					<prg:databinding>
						<prg:variable>argumentD</prg:variable>
					</prg:databinding>
					<prg:names>
						<prg:long>argument-d</prg:long>
						<prg:short>d</prg:short>
					</prg:names>
				</prg:argument>
				<prg:switch id="prg.unittest.option.switchE">
					<prg:databinding>
						<prg:variable>switchE</prg:variable>
					</prg:databinding>
					<prg:names>
						<prg:short>e</prg:short>
						<prg:long>switch-e</prg:long>
					</prg:names>
				</prg:switch>

				<!-- A switch with the same names as prg.unittest.option.switchA -->
				<prg:switch id="prg.unittest.option.switchA2">
					<prg:databinding>
						<prg:variable>switchA2</prg:variable>
					</prg:databinding>
					<prg:names>
						<!-- 'a' overrides the global name -->
						<prg:short>a</prg:short>
						<prg:long>switch-a</prg:long>
					</prg:names>
					<prg:ui mode="disabled" />
				</prg:switch>

			</prg:options>
			<prg:values>
				<prg:other />
			</prg:values>
		</prg:subcommand>
		<prg:subcommand>
			<prg:name>empty</prg:name>
		</prg:subcommand>
	</prg:subcommands>
	<prg:values>
		<prg:other />
	</prg:values>
</prg:program>
